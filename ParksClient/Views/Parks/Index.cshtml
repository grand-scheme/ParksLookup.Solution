@{
  Layout = "_Layout";
  ViewData["Title"] = "Home";
}

@foreach (Park park in Model)
{
  <ul>
    <li> Name: 
      <a href="/Parks/Details/@(park.ParkId)">
        @park.Name 
      </a>
    </li>
    <li>Location: @park.State </li>
    <li>Type of Park: @park.StateOrNational </li>
  </ul>
}
<hr />
<form action="/parks" method="post">
<label for="name">Park Name:
  <input id="name" name="name" type="text">
<label for="state">Location (US State Name):
  <input id="state" name="state" type="text">
<label for="stateornational">State Park or National Park:
  <input id="stateornational" name="stateornational" type="text">
  <button type="submit" value="Add New Park"></button>
</form>